<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:text = "Welcome!"
            android:textSize="25dp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="5dp"
            android:text="Total Users :" />

        <TextView
            android:id="@+id/totalusers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="5dp"
            android:text="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="5dp"
            android:text="Number of Books Donated :" />

        <TextView
            android:id="@+id/numDonations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="5dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="5dp"
            android:text="Yet to be collected :" />

        <TextView
            android:id="@+id/pendingDonations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="5dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="5dp"
            android:text="Number of Books Requested :" />

        <TextView
            android:id="@+id/numRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="5dp"
            android:text="5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="5dp"
            android:text="Yet to be delivered :" />

        <TextView
            android:id="@+id/pendingRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="5dp"
            android:text="5" />

    </LinearLayout>
</ScrollView>